<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rel_list"
    tools:context=".adapters.PrltTolAdapter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="5">

        <TextView
            android:id="@+id/tv_id"
            android:layout_weight="1.1"
            android:padding="10dp"
            android:textSize="11sp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"/>

<!--        LINEAR DI GONE          -->
        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_merah"
                android:layout_weight="1.1"
                android:padding="10dp"
                android:textSize="11sp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"/>

            <TextView
                android:id="@+id/tv_kuning"
                android:layout_weight="1.1"
                android:padding="10dp"
                android:textSize="11sp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"/>

            <TextView
                android:id="@+id/tv_hijau"
                android:layout_weight="1.1"
                android:padding="10dp"
                android:textSize="11sp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_nama_alat"
            android:layout_weight="0.8"
            android:padding="10dp"
            android:textSize="11sp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plaza Computer System (PCS)"/>

        <TextView
            android:id="@+id/tv_id_gerbang"
            android:layout_weight="0.8"
            android:visibility="gone"
            android:padding="10dp"
            android:textSize="11sp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID GERBANG"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_weight="0.8"
            android:visibility="gone"
            android:padding="10dp"
            android:textSize="11sp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STATUS INPUT"/>

        <TextView
            android:id="@+id/tv_id_alat"
            android:visibility="gone"
            android:layout_weight="0.54"
            android:padding="10dp"
            android:textSize="11sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plaza Computer System (PCS)"/>

        <RadioGroup
            android:id="@+id/radio_kondisi"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center|center_vertical"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/radio_merah"
                android:gravity="center"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:textColor="#fff"
                android:background="@drawable/rd_merah"
                android:button="@android:color/transparent"
                android:textSize="14sp"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/radio_kuning"
                android:gravity="center"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:textColor="#fff"
                android:background="@drawable/rd_kuning"
                android:button="@android:color/transparent"
                android:textSize="14sp"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/radio_hijau"
                android:gravity="center"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:textColor="#fff"
                android:background="@drawable/rd_hijau"
                android:button="@android:color/transparent"
                android:textSize="14sp"
                android:layout_weight="1"/>

        </RadioGroup>

        <EditText
            android:background="@drawable/bg_edit_text"
            android:id="@+id/et_keterangan"
            android:layout_weight="0.9"
            android:gravity="start"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:textSize="12sp"
            android:hint="Opsional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_submit"
            android:layout_weight="1.1"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:src="@drawable/send"/>

    </LinearLayout>

</RelativeLayout>